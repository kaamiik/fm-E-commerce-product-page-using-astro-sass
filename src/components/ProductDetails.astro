---
import Button from "./Button.astro";
import PriceInfo from "./PriceInfo.astro";
import QuantitySelectorInput from "../components/QuantitySelectorInput.astro";
---

<div class="product-details">
  <p class="product-brand">Sneaker Company</p>

  <h1 class="product-title | heading-1">Fall Limited Edition Sneakers</h1>

  <p class="product-description">
    These low-profile sneakers are your perfect casual wear companion. Featuring
    a durable rubber outer sole, theyâ€™ll withstand everything the weather can
    offer.
  </p>

  <PriceInfo />

  <form class="product-form" action="/">
    <QuantitySelectorInput />
    <Button theme="primary">
      <svg
        aria-hidden="true"
        focusable="false"
        width="22"
        height="20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M20.925 3.641H3.863L3.61.816A.896.896 0 0 0 2.717 0H.897a.896.896 0 1 0 0 1.792h1l1.031 11.483c.073.828.52 1.726 1.291 2.336C2.83 17.385 4.099 20 6.359 20c1.875 0 3.197-1.87 2.554-3.642h4.905c-.642 1.77.677 3.642 2.555 3.642a2.72 2.72 0 0 0 2.717-2.717 2.72 2.72 0 0 0-2.717-2.717H6.365c-.681 0-1.274-.41-1.53-1.009l14.321-.842a.896.896 0 0 0 .817-.677l1.821-7.283a.897.897 0 0 0-.87-1.114ZM6.358 18.208a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm10.015 0a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm2.021-7.243-13.8.81-.57-6.341h15.753l-1.383 5.53Z"
          fill="#1D2026"
          fill-rule="nonzero"></path></svg
      >
      Add to Cart
    </Button>
  </form>
</div>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .product-details {
    max-width: $product-details-max-width;
    margin-inline: $product-details-margin-inline;
    order: 2;
    @include mq(large) {
      padding-block-start: 3.5625rem;
      padding-block-end: 4.8125rem;
    }
  }

  .product-brand {
    font-size: $product-brand-font-size;
    font-weight: $product-brand-font-weight;
    letter-spacing: $product-brand-letter-spacing;
    text-transform: $product-brand-text-transform;
  }

  .product-title {
    margin-block-start: $product-title-margin-block-start;

    @include mq(large) {
      margin-block-start: $product-title-margin-block-start-desktop;
    }
  }

  .product-description {
    margin-block-start: $product-description-margin-block-start;

    @include mq(large) {
      margin-block-start: $product-description-margin-block-start-desktop;
    }
  }

  .product-form {
    display: $product-form-display;
    gap: $product-form-gap;

    @include mq(large) {
      grid-template-columns: $product-form-display-option-desktop;
    }
  }
</style>
