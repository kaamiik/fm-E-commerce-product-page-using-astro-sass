<div class="product-gallery">
  <!-- Main image with next/previous controls (Show this on mobile view) -->
  <div class="main-image-container">
    <!-- This button is hidden for tablet and desktop -->
    <button class="gallery-nav__btn prev" aria-label="Previous Image">
      <svg
        aria-hidden="true"
        focusable="false"
        width="12"
        height="18"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M11 1 3 9l8 8"
          stroke="#1D2026"
          stroke-width="3"
          fill="none"
          fill-rule="evenodd"></path></svg
      >
    </button>

    <div class="main-image-wrapper">
      <!-- This button is not clickable for mobile and is clickable for tablet and desktop to open lightbox -->
      <button
        class="main-image-button"
        aria-label="Open lightbox to view larger image"
      >
        <img
          src="/assets/images/image-product-1.jpg"
          alt="A single beige and white sneaker with its sole facing upwards, set against a dual-tone background with orange on top and yellow at the bottom."
        />
      </button>
    </div>

    <!-- This button is hidden for tablet and desktop -->
    <button class="gallery-nav__btn next" aria-label="Next Image">
      <svg
        aria-hidden="true"
        focusable="false"
        width="13"
        height="18"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="m2 1 8 8-8 8"
          stroke="#1D2026"
          stroke-width="3"
          fill="none"
          fill-rule="evenodd"></path></svg
      >
    </button>
  </div>

  <!-- Thumbnails is hidden for mobile -->
  <div class="thumbnails" hidden>
    <button class="thumbnail" aria-label="View image 1">
      <img src="/public/assets/images/image-product-1-thumbnail.jpg" alt="" />
    </button>
    <button class="thumbnail" aria-label="View image 2">
      <img src="/public/assets/images/image-product-2-thumbnail.jpg" alt="" />
    </button>
    <button class="thumbnail" aria-label="View image 3">
      <img src="/public/assets/images/image-product-3-thumbnail.jpg" alt="" />
    </button>
    <button class="thumbnail" aria-label="View image 4">
      <img src="/public/assets/images/image-product-4-thumbnail.jpg" alt="" />
    </button>
  </div>

  <!-- Only show for tablet and desktop -->
  <div class="lightbox" hidden>
    <button
      type="button"
      class="lightbox-close"
      aria-label="Close lightbox"
      aria-controls="lightbox"
      ><svg
        aria-hidden="true"
        focusable="false"
        width="14"
        height="15"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          d="m11.596.782 2.122 2.122L9.12 7.499l4.597 4.597-2.122 2.122L7 9.62l-4.595 4.597-2.122-2.122L4.878 7.5.282 2.904 2.404.782l4.595 4.596L11.596.782Z"
          fill="#69707D"
          fill-rule="evenodd"></path></svg
      ></button
    >

    <div class="lightbox-main-image-containee">
      <button type="button" class="lightbox-prev" aria-label="Previous Image">
        <svg
          aria-hidden="true"
          focusable="false"
          width="12"
          height="18"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M11 1 3 9l8 8"
            stroke="#1D2026"
            stroke-width="3"
            fill="none"
            fill-rule="evenodd"></path></svg
        >
      </button>

      <div class="lightbox-main-image">
        <img src="/assets/images/image-product-1.jpg" alt="" />
      </div>

      <button type="button" class="lightbox-next" aria-label="Next Image">
        <svg
          aria-hidden="true"
          focusable="false"
          width="13"
          height="18"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m2 1 8 8-8 8"
            stroke="#1D2026"
            stroke-width="3"
            fill="none"
            fill-rule="evenodd"></path></svg
        >
      </button>
    </div>

    <div class="lightbox-thumbnails">
      <button
        aria-label="View enlarged image 1"
        aria-controls="lightbox-main-image"
      >
        <img
          src="/assets/images/image-product-1-thumbnail.jpg"
          alt="Thumbnail 1 for enlarged view"
        />
      </button>
      <button
        aria-label="View enlarged image 2"
        aria-controls="lightbox-main-image"
      >
        <img
          src="/assets/images/image-product-2-thumbnail.jpg"
          alt="Thumbnail 2 for enlarged view"
        />
      </button>
      <button
        aria-label="View enlarged image 3"
        aria-controls="lightbox-main-image"
      >
        <img
          src="/assets/images/image-product-3-thumbnail.jpg"
          alt="Thumbnail 3 for enlarged view"
        />
      </button>
      <button
        aria-label="View enlarged image 4"
        aria-controls="lightbox-main-image"
      >
        <img
          src="/assets/images/image-product-4-thumbnail.jpg"
          alt="Thumbnail 4 for enlarged view"
        />
      </button>
    </div>
  </div>
</div>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .main-image-container {
    position: relative;
  }
  .main-image-wrapper {
    margin-left: -24px;
    margin-right: -24px;

    .main-image-button {
      border: 0;
      background: none;
      padding: 0;
      width: 100%;
    }

    & img {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }
  }
  .gallery-nav__btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    border-radius: 100vh;
    background: none;
    background-color: $color-neutral-400;
    cursor: pointer;
    display: grid;
    place-content: center;
    width: 40px;
    height: 40px;
  }

  .prev {
    left: -8px;
  }

  .next {
    right: -8px;
  }
</style>
